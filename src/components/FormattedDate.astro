---
import { CONFIG } from '@config/config';
export interface Props {
    date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString(CONFIG.locale, {
            year: 'numeric',
            month: 'numeric',
            day: 'numeric',
        })
    }
</time>
