---
import { CONFIG } from '@config/config';
import type { ImageMetadata } from 'astro';

export interface Props {
    image: ImageMetadata | string;
}

const { image } = Astro.props;
// console.log("ðŸš€ ~ image:", image)

const config = CONFIG;

// if (!image) {
//     return null;
// }
---

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={typeof image === 'string' ? image : image.src} />
<meta property="og:image" content={typeof image === 'string' ? image : image.src} />
<meta property="og:image:width" content={config.shareImageWidth.toString()} />
<meta property="og:image:height" content={config.shareImageHeight.toString()} />
